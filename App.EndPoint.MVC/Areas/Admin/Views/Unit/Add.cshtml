@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model App.Domain.Core.Units.DTOs.AddUnitDto;
@{
    ViewData["Title"] = "Add on admin area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card-block">
    <form asp-action="Add" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input asp-for="Name" type="text" class="form-control" placeholder="نام قسمت">

            </div>

            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input asp-for="Description" type="text" class="form-control" placeholder="توضیحات">

            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>
